<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#1C1C1C"
    android:orientation="vertical">
    <!-- 티켓예매 Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/seoulnamsanb"
        android:text="예약 번호 확인"
        android:textColor="#ffffff"
        android:textSize="50dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/seoulnamsanb"
        android:text="Confirm Booking Number"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <!-- 예약자 전화 번호 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ticketnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/seoulnamsanb"
            android:text="티켓매수 : "
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/edit"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ticketnum"
            android:layout_alignLeft="@id/ticketnum"
            android:layout_marginLeft="167dp"
            android:layout_marginTop="-36dp"
            android:backgroundTint="#FFFFFF"
            android:hint="티켓 매수를 입력하세요"
            android:textColorHint="#FFFFFF" />
    </RelativeLayout>

    <Button
        android:id="@+id/plusbt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/seoulnamsanb"
        android:text="번호 추가" />


