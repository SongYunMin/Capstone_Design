<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#1C1C1C"
    >

    <!-- 로그인이 완료된 것을 판별하기 위한 TextView -->
    <TextView
        android:id="@+id/LoginCompletion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/seoulnamsanb"
        android:textColor="#ffffff" />

    <!-- 배경화면 -->

    <!-- Main 타이틀 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/seoulnamsanb"
        android:text="Fair Ticket"
        android:textColor="#ffffff "
        android:textSize="60dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- 회원가입 버튼 -->
        <Button
            android:id="@+id/newAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#3C3533"
            android:fontFamily="@font/seoulnamsanb"
            android:text="회원가입" />

        <!-- 로그인 버튼 -->
        <Button
            android:id="@+id/Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#3C3533"
            android:fontFamily="@font/seoulnamsanb"
            android:text="로그인"
            android:visibility="visible" />

        <!-- 로그아웃 버튼 -->
        <Button
            android:id="@+id/Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#3C3533"
            android:fontFamily="@font/seoulnamsanb"
            android:text="로그아웃"
            android:visibility="gone" />


        <!-- 티켓예매 버튼 -->
        <Button
            android:id="@+id/Ticketing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#3C3533"
            android:fontFamily="@font/seoulnamsanb"
            android:text="티켓예매" />

        <!-- 내 티켓 버튼 -->
        <Button
            android:id="@+id/myTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#3C3533"
            android:fontFamily="@font/seoulnamsanb"
            android:text="내 티켓" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/seoulnamsanb"
            android:text="티켓 예매 내역"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </LinearLayout>

    <Button
        android:id="@+id/Reservation_1"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="30dp"
        android:background="#40000000"
        android:fontFamily="@font/seoulnamsanb"
        android:text="준비중 입니다"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

    <Button
        android:id="@+id/Reservation_2"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="20dp"
        android:background="#40000000"
        android:fontFamily="@font/seoulnamsanb"
        android:text="준비중 입니다"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

</LinearLayout>